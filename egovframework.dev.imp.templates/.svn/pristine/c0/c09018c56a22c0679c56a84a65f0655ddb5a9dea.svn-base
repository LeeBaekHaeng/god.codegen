<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="${txtTransactionName}" class="org.springframework.orm.jpa.JpaTransactionManager">
	   <property name="entityManagerFactory" ref="${txtEttMgrFactory}"/>
	</bean>
	 
	<bean id="${txtEttMgrFactory}" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
	   <property name="persistenceUnitName" value="${txtPstUnitName}"/>
	   <property name="persistenceXmlLocation" value="${txtPstXMLLoc}"/>
	   <property name="dataSource" ref="${txtDataSourceName}"/>
	</bean>	

</beans>