<plugin>
   <extension-point id="templateWizards" name="Template Wizards" schema="schema/templatewizards.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="egovframework.dev.imp.ui.views"
            class="egovframework.dev.imp.codegen.template.views.TemplatesView"
            icon="icons/tcgenerator.gif"
            id="egovframework.dev.imp.codegen.views.TemplatesView"
            name="eGovFrame Templates"
            restorable="true">
